<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox fx:controller="sample.Controller"
      xmlns:fx="http://javafx.com/fxml" alignment="center">
    <TextArea fx:id="textArea" VBox.vgrow="ALWAYS" editable="false" focusTraversable="false"/>
    <HBox>
        <TextField fx:id="textField" HBox.hgrow="ALWAYS" onAction="#enter"/>
        <Button fx:id="buttonSend" onAction="#send" minWidth="80" text="Отправить"/>
    </HBox>
</VBox>
